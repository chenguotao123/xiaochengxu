/**index.wxss**/
.container {
	width: 100%;
	position: relative;
}
.top {
	width: 100%;
}
.swiper {
	width: 100%;
	height: 400rpx;
}
.swiper .slide-image {
	width: 100%;
	height: 400rpx;
	display: block;
}
.nav {
	width: 100%;
	position: relative;
	padding: 30rpx;
  	box-sizing: border-box;
}
.nav .nav-box {
	width: 100%;
	display: flex;
	flex-direction: row;
}
.nav .nav-box .navigator {
	width: 100%;
	flex: 1;
	display: flex;
	flex-direction: row;
}
.nav .nav-box .nav-item {
	width: 100%;
	height: 140rpx;
	flex: 1;
	margin: 15rpx;
  	box-sizing: border-box;
  	text-align: center;
  	line-height: 100rpx;
}
.nav .nav-box .nav-item a {
	width: 100%;
	height: 140rpx;
	display: block;
	margin: 0 auto;
}
.nav .nav-box .nav-item image {
	width: 100rpx;
	height: 100rpx;
	margin: 0 auto;
	display: block;
}
.nav .nav-box .nav-item .nav-text {
	width: 100%;
	height: 40rpx;
	text-align: center;
	line-height: 40rpx;
	font-size: 30rpx;
	color: #333333;
	display: block;
}
/*主要部分*/
.main {
	width: 100%;
	position: relative;
	padding: 10rpx 0;
}
.main .main-image-box {
	width: 100%;
	margin-bottom: 20rpx;
}
.main .main-image-box .main-image {
	width: 100%;
	height: 300rpx;
	display: block;
}
.footer {
	width: 100%;
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
	font-size: 30rpx;
	color: #888;
	background-color: #efefef;
}