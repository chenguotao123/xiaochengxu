page {
	background-color: #87CEFA;
	width: 100%;
	height: 100%;
}
.img-box {
	width: 100%;
	height: 140rpx;
	line-height: 140rpx;
	text-align: center;
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	bottom: 300rpx;
	margin: auto;
}
.img-box image {
	width: 140rpx;
	height: 140rpx;
	line-height: 140rpx;
	text-align: center;
	border-radius: 70rpx;
}
.text-box {
	width: 100%;
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	margin: auto;
}
.text-box button {
	width: 220rpx;
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
	display: block;
	font-size: 32rpx;
	color: #333;
}

