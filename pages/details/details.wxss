.tit-box {
	width: 100%;
	height: 100rpx;
	line-height: 100rpx;
	text-align: center;
	background-color: #efefef;
	margin-bottom: 16rpx;
}
.tit-box text {
	font-size: 34rpx;
	color: #333;
}
.img-box {
	width: 100%;
	height: 500rpx;
	line-height: 500rpx;
	margin: 0 auto;
}
.img-box image {
	width: 100%;
	height: 500rpx;
	display: block;
}
.cont-box {
	position: relative;
	padding: 20rpx;
	margin: 20rpx 0;
	background-color: #efefef;
}
.cont-box text {
	text-indent: 2em;
	display: block;
	font-size: 32rpx;
	color: #555;
}
